{
    "extends": [
        "airbnb-base",
        "airbnb-typescript/base"
      ],
    "plugins": ["@typescript-eslint"],
    "parser": "@typescript-eslint/parser",
    "rules": {
      "@typescript-eslint/indent": ["error", 4],
      "semi": ["error", "always"],
      "import/extensions": 0,
      "max-len": "off",
      "no-param-reassign": ["error", { "props": false }]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".ts", ".tsx"]
        }
      }
    },
    "parserOptions": {
        "project": "./tsconfig.json"
    }
  }